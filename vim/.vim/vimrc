"     set grepformat=%f:%l:%c:%m,%f:%l:%m
" elseif executable("rg")
"     set grepprg=rg\ --vimgrep\ --no-heading\ --smart-case\ --follow
"     set grepformat=%f:%l:%c:%m,%f:%l:%m
" elseif executable("ag")
